<section id="contact" class="py-5 bg-light border-top reveal">
  <div class="container">
    <h1 class="display-5 fw-bold mb-4 text-center">{{ contact.title }}</h1>
    <form class="card shadow-sm p-4 p-lg-5 mx-auto" style="max-width:700px">
      <div class="row g-3">
        <div class="col-sm-6">
          <label class="form-label">Name</label>
          <input type="text" class="form-control" placeholder="Your name" required>
        </div>
        <div class="col-sm-6">
          <label class="form-label">Email</label>
          <input type="email" class="form-control" placeholder="you@example.com" required>
        </div>
        <div class="col-12">
          <label class="form-label">Message</label>
          <textarea rows="5" class="form-control" placeholder="Tell us more..." required></textarea>
        </div>
        <div class="col-12 d-grid">
          <button class="btn btn-primary btn-lg">Send Message</button>
        </div>
      </div>
    </form>
  </div>
</section>
