<section id="services" class="py-5 reveal">
  <div class="container">
    <div class="text-center mb-5">
      <h2 class="h1 fw-bold mb-2">{{ servicesSection.title }}</h2>
      <p class="text-secondary">{{ servicesSection.subtitle }}</p>
    </div>
    <div class="row g-4">
      {% for service in services %}
      <div class="col-md-6 col-lg-4">
        <div class="card h-100 card-hover">
          <div class="card-body p-4">
            <div class="icon-circle bg-primary-subtle text-primary mb-3"><i class="bi bi-{{ service.icon }}"></i></div>
            <h3 class="h5">{{ service.title }}</h3>
            <p class="text-secondary">{{ service.description }}</p>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
